<div class="column is-12">
  <div class="content is-medium">
    <h3 class="title is-3">Requests</h3>
    <% @requests.each do |request| %>
      <div class="box">
        <h4 class="title is-3"><%= request.user.name  %>(<%= request.user.job_title %>) </h4>
        <article class="message is-primary">
          <div class="message-body">
            Requests a <%= request.off_type %> from <%= request.start_date %> to <%= request.end_date %>
          </div>
          <% if current_user.user_level == 'manager' || current_user.user_level == 'admin' %>
            <section class="section">
              <button class="button is-success is-half">Approve Request</button>
              <button class="button is-danger is-half">Deny Request</button>
            </section>
          <% else %>
            <section class="section">
              <% if request.approved %>
                <button class="button is-success is-half">Request was approved on <%= request.updated_at %></button>
              <% else %>
                <button class="button is-danger is-half">Request was denied on <%= request.updated_at %></button>
              <% end %>
            </section>
          <% end %>
        </article>
      </div>
    <% end %>

  </div>
</div>