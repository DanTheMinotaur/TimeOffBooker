<%= render 'partials/heading', heading: 'Add A User' %>

<% if @user_created %>
  <h2><%= @user_created %></h2>
<% else %>
  <%= form_for :user_details do |f| %>
    <div class="field">
      <div class="control">
        <%= f.label(:name, class: "label") %>
        <%= f.text_field(:name, class: "input") %>
      </div>
    </div>
    <div class="field">
      <%= f.label(:email, class: "label") %>
      <div class="control has-icons-left has-icons-right">
        <%= f.email_field(:email, class: "input", placeholder: "Email") %>
        <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
      </div>
    </div>
    <div class="field">
      <%= f.label(:days_off, class: "label") %>
      <div class="control">
        <%= f.number_field(:days_off, class: "input", placeholder: "20", value: 20) %>
      </div>
    </div>
    <div class="field">
      <%= f.label(:password, class: "label") %>
      <div class="control">
        <%= f.password_field(:password, class: "input") %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.label(:job_title, class: "label") %>
        <%= f.text_field(:job_title, class: "input") %>
      </div>
    </div>
    <div class="select is-large">
      <%= f.select(:user_level, options_for_select(
          {
              :Employee => 1,
              :Manager => 2,
              :Admin => 3,
          }
      ))%>
    </div>
    <%= f.submit(class: "button is-large is-success" ) %>
  <% end %>
<% end %>